# Google Cloud Platform Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Authentication
# Option 1: Use service account key file
GOOGLE_APPLICATION_CREDENTIALS="/path/to/your/service-account-key.json"

# Option 2: Use service account key as JSON string (for CI/CD)
# GOOGLE_CREDENTIALS='{"type": "service_account", "project_id": "your-project", ...}'

# Default project and region
GOOGLE_PROJECT="your-default-project-id"
GOOGLE_REGION="us-central1"

# Terraform Cloud / CI/CD Variables (if using)
TF_VAR_gcp_credentials_json="${GOOGLE_CREDENTIALS}"
TF_VAR_google_project="${GOOGLE_PROJECT}"
TF_VAR_google_region="${GOOGLE_REGION}"

# Project Configuration
TF_VAR_project_id="your-new-project-id"
TF_VAR_project_name="Your Project Name"
TF_VAR_org_id="123456789012"
# TF_VAR_folder_id="123456789012"  # Use instead of org_id if placing in folder
TF_VAR_billing_account="01234A-567890-ABCDEF"

# Infrastructure Configuration  
TF_VAR_region="us-central1"
TF_VAR_zone="us-central1-a"
TF_VAR_subnet_cidr="10.0.0.0/24"

# VM Configuration
TF_VAR_enable_external_ip="true"
TF_VAR_create_static_ip="false"
TF_VAR_boot_disk_size="10"

# SSH Configuration (replace with your actual public key)
TF_VAR_ssh_keys="username:ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ... username@hostname"

# Security
TF_VAR_ssh_source_ranges='["YOUR.IP.ADDRESS.HERE/32"]'  # Restrict SSH access

# Optional: Skip billing for testing
# TF_VAR_skip_billing="true"